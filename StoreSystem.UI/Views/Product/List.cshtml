@model StoreSystem.UI.Models.ProductListViewModel

@{
    ViewBag.Title = "Product/List";
}
<h2>Product List</h2>

<a class="btn btn-xs btn-success" asp-controller="Product" asp-action="Add">Add a new product</a>
<br/>
<br/>
<div>


@using (Html.BeginForm("List", "Product", FormMethod.Get))
{
    @Html.TextBox("productName")
    <input type="submit" value="Search" />
}
<br/>
</div>


<div>
    <table class="table table-responsive">
        <thead>
        <tr>
            <td>Product Name</td>
            <td>Unit Price</td>
            <td>Units In Stock</td>
            <td></td>
            <td></td>
        </tr>
        </thead>
        <tbody>
        @if (Model.Products.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color: red">
                    No Match Any Document
                </td>
            </tr>
        }
        
        else
        {
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td><a class="btn btn-xs btn-info" asp-controller="Product" asp-action="Update" asp-route-productId="@product.ProductId">Update</a></td>
                    <td><a class="btn btn-xs btn-danger" asp-controller="Product" asp-action="Delete" asp-route-productId="@product.ProductId">Delete</a></td>
                </tr>
            }
        }
    </table>
</div>